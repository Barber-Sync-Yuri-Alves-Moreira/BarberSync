{
  "version": 2,
  "builds": [
    {
      "src": "barbersync_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11" 
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "media_build/**", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)", 
      "dest": "/media_build/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "barbersync_project/wsgi.py"
    }
  ],
  "scripts": {
    "vercel-build": "python manage.py collectstatic --noinput && python manage.py migrate --noinput"
  }
}